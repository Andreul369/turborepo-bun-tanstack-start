{
  "name": "@monorepo/i18n",
  "type": "module",
  "scripts": {
    "dev": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide --watch",
    "build": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide && tsc -p tsconfig.json",
    "lint": "biome check .",
    "format": "biome format --write .",
    "machine-translate": "inlang machine translate --project project.inlang"
  },
  "exports": {
    "./runtime": {
      "types": "./src/paraglide/runtime.d.ts",
      "default": "./src/paraglide/runtime.js"
    },
    "./messages": {
      "types": "./src/paraglide/messages.d.ts",
      "default": "./src/paraglide/messages.js"
    },
    "./server": {
      "types": "./src/paraglide/server.d.ts",
      "default": "./src/paraglide/server.js"
    },
    "./utils": "./src/utils.ts"
  },
  "dependencies": {
    "@inlang/paraglide-js": "catalog:"
  },
  "devDependencies": {
    "@inlang/cli": "^3.1.6",
    "@monorepo/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "^5.9.3"
  }
}
